{
  "name": "retap-monorepo",
  "version": 2,
  "builds": [
    {
      "src": "apps/website/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    },
    {
      "src": "apps/flutter-web-client/build/web/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/c/(.*)", "dest": "/apps/flutter-web-client/build/web/index.html" },
    { "src": "/c",      "dest": "/apps/flutter-web-client/build/web/index.html" },
    { "src": "/(.*)",   "dest": "/apps/website/$1" }
  ],
  "env": {
    "NEXT_PUBLIC_APP_URL": "https://retapcard.com",
    "NEXT_PUBLIC_FLUTTER_APP_URL": "https://retapcard.com/c"
  }
} 