{
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "apps/flutter-web-client/build/web",
  "rewrites": [
    {
      "source": "/app/(.*)",
      "destination": "/api/flutter-app/$1"
    },
    {
      "source": "/c/:cardId",
      "destination": "/api/flutter-app/c/$cardId"
    }
  ],
  "headers": [
    {
      "source": "/app/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],
  "functions": {
    "apps/website/app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "builds": [
    {
      "src": "apps/website/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    },
    {
      "src": "apps/flutter-web-client/build/web/**",
      "use": "@vercel/static"
    }
  ]
} 