{
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "apps/website/.next",
  "rewrites": [
    {
      "source": "/app/(.*)",
      "destination": "/api/flutter-app/$1"
    },
    {
      "source": "/c/:cardId",
      "destination": "/api/flutter-app/c/$cardId"
    }
  ],
  "headers": [
    {
      "source": "/app/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
} 